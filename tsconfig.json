{
	"compilerOptions": {
		"outDir": "build",
		"target": "es6",
		"module": "system",
		"moduleResolution": "node",
		"sourceMap": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,		
		"noImplicitAny": true,
    	"suppressImplicitAnyIndexErrors": true,
		"removeComments": false
	},
	"exclude": [
		"node_modules"
	]
}